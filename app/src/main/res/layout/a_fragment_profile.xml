<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".adminFx.AdminProfileFragment"
    android:background="@drawable/bg_blue_gradient">

    <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_profile_top"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="User Name"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/userCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:layout_below="@id/userName"
            android:layout_marginTop="8dp"
            android:text="Category"
            android:textColor="@color/shadow"
            android:textSize="14sp" />

    </RelativeLayout>

    <!-- Center Container with User Details -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topContainer"
        android:layout_margin="30dp"
        android:background="@color/blue"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/userProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER PROFILE"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile "
            android:textColor="@color/light_gray"
            android:textStyle="italic"
            android:drawableEnd="@drawable/ic_pen"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            android:textSize="17sp" />

        <!-- ID Number -->
        <TextView
            android:id="@+id/IDNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Number:"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/IDNumInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="ID Number Information"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            android:textSize="14sp" />

        <!-- Program (Students only) -->
        <TextView
            android:id="@+id/programTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program:"
            android:textColor="@color/yellow"
            android:fontFamily="@font/poppins_medium"

            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/programInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Program Information"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            android:textSize="14sp" />

        <!-- Year Level (Students only) -->
        <TextView
            android:id="@+id/yearLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year Level:"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_medium"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/yearLevelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            android:text="Year Level Information"
            android:textSize="14sp" />

        <!-- Department (Faculty only) -->
        <TextView
            android:id="@+id/departmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department:"
            android:textColor="@color/yellow"
            android:fontFamily="@font/poppins_medium"

            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/departmentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="10dp"
            android:text="Department Information"
            android:textSize="14sp" />


        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerContainer"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/yellow"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

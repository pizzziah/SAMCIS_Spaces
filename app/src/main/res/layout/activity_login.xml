<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start_up"
    android:padding="24dp"
    tools:context=".startUp.Login">

    <LinearLayout
        android:id="@+id/startupContainer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Logo-->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_2_drop_shadow_cropped" />

        <!--INFORMATION CONTAINER-->
        <LinearLayout
            android:id="@+id/infoInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:orientation="vertical"
            android:padding="12dp">

            <!--Email-->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:background="@drawable/bg_light_gray"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <!--Pwd-->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:layout_marginTop="16dp"
                android:background="@drawable/bg_light_gray"
                android:drawableEnd="@drawable/ic_eye_slash"
                android:drawableTint="@color/shadow"
                android:fontFamily="@font/poppins_medium"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="16sp" />

            <!--Button-->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="160dp"

                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:backgroundTint="#9DFFBF55"
                android:fontFamily="@font/montserrat_bold"
                android:text="Log In"
                android:textColor="@color/black"
                android:textSize="21sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/loginVerif"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="8dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="Donâ€™t Have an Account Yet?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="8dp"
                android:shadowColor="@color/black"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:text="Sign Up."
                android:textAlignment="center"
                android:textColor="@color/bright_blue"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

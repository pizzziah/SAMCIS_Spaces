<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_log_in_bg"
    android:padding="24dp"
    tools:context=".startUp.Login">

    <LinearLayout
        android:id="@+id/startupContainer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Logo-->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_drop_shadow"/>

        <!--INFORMATION CONTAINER-->
        <LinearLayout
            android:id="@+id/infoInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="65dp">

            <!--Email-->
            <EditText
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"/>

            <!--Pwd-->
            <EditText
                android:id="@+id/password"
                android:hint="Enter Password"
                android:inputType="textPassword"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"/>

                <!--Button-->
                <Button
                    android:id="@+id/loginButton"
                    android:text="Log In"

                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/yellow_round"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:fontFamily="@font/montserrat_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <TextView
                android:id="@+id/loginVerif"
                android:text="Donâ€™t Have an Account Yet?"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/signUp"
                android:text="Sign Up."

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/bright_blue"
                android:fontFamily="@font/poppins_medium"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

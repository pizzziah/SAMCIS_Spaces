<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".userFx.UserBookingFragment"
    android:background="@drawable/bg_blue_gradient"
    android:padding="30dp">

    <!-- Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginBottom="30dp" />


    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/pendingBttn"
            android:text="Pending"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#99D7D7D7"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold" />

        <!-- Save Button -->
        <Button
            android:id="@+id/approvedBttn"
            android:text="Approved"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:backgroundTint="#9DFFBF55"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <!-- Scrollable Venue Cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:background="@color/blue"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by: "
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bold">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Booking Image -->
                <ImageView
                    android:id="@+id/bookingImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_2" />

                <!-- Booking Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/bookingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="November 16"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bookingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="10:00 am - 10:30 am"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/receivedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Received: October 30"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#bbbbbb"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/viewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#5B9DFE"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Approve and Deny Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/buttonApprove"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#99D7D7D7"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Approve"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/buttonDeny"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#9DFFBF55"
                        android:text="Deny"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>